{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":timezone(Europe/Amsterdam)"
  ],
  "platformAutomerge": true,
  "helm-values": {
    "managerFilePatterns": [
      "/^k8s/.+\\.ya?ml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/^k8s/.+\\.ya?ml$/"
    ]
  },
  "nix": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/k8s/10_apps/02_media-flix/postgres-cluster/cluster.yaml/"
      ],
      "matchStrings": [
        "imageName: (?<depName>ghcr.io/cloudnative-pg/postgresql):(?<currentValue>.+)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "linuxserver/qbittorrent"
      ],
      "allowedVersions": "<10"
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest",
        "lockFileMaintenance"
      ],
      "automerge": true
    },
    {
      "description": "Group Nix flake inputs",
      "matchManagers": [
        "nix"
      ],
      "groupName": "nix"
    },
    {
      "description": "Group k8s updates by application",
      "matchFileNames": [
        "k8s/([^/]+)/([^/]+)/.*"
      ],
      "groupName": "{{{path.2}}}"
    }
  ],
  "labels": [
    "dependencies"
  ]
}
