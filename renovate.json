{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    ":timezone(Europe/Amsterdam)",
    "github>nilson-aguiar/nlab//.github/renovate/allowed-versions.json5"
  ],
  "helm-values": {
    "fileMatch": [
      "^k8s/.+\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "^k8s/.+\\.ya?ml$"
    ]
  },
  "nix": {
    "enabled": true
  },
  "regexManagers": [
    {
      "fileMatch": [
        "k8s/10_apps/02_media-flix/postgres-cluster/cluster.yaml"
      ],
      "matchStrings": [
        "imageName: (?<depName>ghcr.io/cloudnative-pg/postgresql):(?<currentValue>.+)"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
